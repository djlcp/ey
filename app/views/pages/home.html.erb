  <header class="masthead text-center text-white d-flex">
  <div class="container my-auto">
    <div class="row">
      <div class="col-lg-10 mx-auto">
        <h1 class="text-uppercase">
          <strong>Welcome to your Time Manager</strong>
        </h1>
        <hr>
      </div>
      <div class="col-lg-8 mx-auto">
        <p class="text-faded mb-5">Scroll down to see more.</p>
        </div>
    </div>
  </div>
</header>

<section id="leave">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Request Leave</h2>
        <hr class="my-4">
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-6 text-center">

        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Annual Leave</h5>
            <div>
              <i class="fas fa-4x fa-sun mb-3 sr-icon-1"></i>
            </div>
            <a href="#" class="button">Request annual leave</a>
          </div>
        </div>

      </div>

      <div class="col-lg-3 col-md-6 text-center">

        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Training Leave</h5>
            <div>
              <i class="fas fa-4x fa-train mb-3 sr-icon-1"></i>
            </div>
            <a href="#" class="button">Request training leave</a>
          </div>
        </div>

      </div>

      <div class="col-lg-3 col-md-6 text-center">

        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Study Leave</h5>
            <div>
              <i class="fas fa-4x fa-book-open mb-3 sr-icon-1"></i>
            </div>
            <a href="#" class="button">Request study leave</a>
          </div>
        </div>

      </div>

      <div class="col-lg-3 col-md-6 text-center">

        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Sick Leave</h5>
            <div>
              <i class="fas fa-4x fa-book-open mb-3 sr-icon-1"></i>
            </div>
            <a href="#" class="button">Log sick leave</a>
          </div>
        </div>

      </div>

    </div>
  </div>
</section>

<section class="bg-primary" id="profile">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto text-center">
          <h2> Hello, This is the placeholder section for your profile!</h2>
          <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-admin"%>
          <hr class="light my-4">
          <div class="container">
      <h2>Leave Requests</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Description</th>
            <th>Start</th>
            <th>End</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <%- if user_signed_in? %>
          <% current_user.requests.each do |request| %>
            <tr>
              <td><%= request.description %></td>
              <td><%= request.start.strftime("%d-%m-%Y") %></td>
              <td><%= request.end.strftime("%d-%m-%Y") %></td>
              <td><%= request.approval %>
            </tr>
          <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
      <p class="text-faded mb-4">In this section, you will be able to see how many days leave you have left.</p>
    </div>
  </div>
</div>
</section>

<section class="bg-primary" id="calendar">
<div class="container">
<div class="row">
  <div class="col-lg-8 mx-auto text-center">

    <hr class="light my-4">
    <%= link_to 'New Leave Request', new_request_path, class: "btn btn-light btn-xl js-scroll-trigger" %>

  </div>
</div>
</div>
</section>

