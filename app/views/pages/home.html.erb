<%= stylesheet_link_tag "creative.scss" %>
<header class="masthead text-center text-white d-flex">
  <div class="container my-auto">
    <div class="row">
      <div class="col-lg-10 mx-auto">
        <h1 class="text-uppercase">
          <strong>Welcome to your Time Manager</strong>
        </h1>
        <hr>
      </div>
      <div class="col-lg-8 mx-auto">
        <p class="text-faded mb-5">Scroll down to see more.</p>
        </div>
    </div>
  </div>
</header>

<section class="bg-primary" id="profile">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto text-center">
        <h2 class="section-heading text-white">This is the placeholder section for your profile!</h2>
        <hr class="light my-4">
        <p class="text-faded mb-4">In this section, you will be able to see how many days leave you have left.</p>
    </div>
    </div>

  </div>
</section>

<section class="bg-primary" id="about">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto text-center">
      <div id='calendar'></div>
          <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4 class="modal-title"><span id="requestTitle"></span></h4>
                </div>
              <div class="modal-body">
                <p id="pDetails"></p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>

        <hr class="light my-4">
        <p class="text-faded mb-4">In this section, a calendar will show your upcoming leave. You will also be able to see your teams leave dates.</p>
        <a class="btn btn-light btn-xl js-scroll-trigger" href="#services">Click this to request leave</a>
      </div>
    </div>
  </div>
</section>

<section id="services">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Request All Leave Below</h2>
        <hr class="my-4">
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-6 text-center">
        <div class="service-box mt-5 mx-auto">
          <i class="fas fa-4x fa-gem text-primary mb-3 sr-icon-1"></i>
          <h3 class="mb-3">Annual Leave</h3>
          <p class="text-muted mb-0">Request your annual leave here.</p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6 text-center">
        <div class="service-box mt-5 mx-auto">
          <i class="fas fa-4x fa-paper-plane text-primary mb-3 sr-icon-1"></i>
          <h3 class="mb-3">Training Leave</h3>
          <p class="text-muted mb-0">Request your training leave here.</p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6 text-center">
        <div class="service-box mt-5 mx-auto">
          <i class="fas fa-4x fa-code text-primary mb-3 sr-icon-1"></i>
          <h3 class="mb-3">Study Leave</h3>
          <p class="text-muted mb-0">Request your training leave here.</p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6 text-center">
        <div class="service-box mt-5 mx-auto">
          <i class="fas fa-4x fa-heart text-primary mb-3 sr-icon-1"></i>
          <h3 class="mb-3">Sick Leave</h3>
          <p class="text-muted mb-0">Let us know right here.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto text-center">
        <h2 class="section-heading">Opportunities</h2>
        <hr class="my-4">
        <p class="mb-5">Ready for the next step? Click below for more.</p>
      </div>
    </div>
  </div>
    <div class="row">
      <div class="col-lg-4 ml-auto text-center">
        <i class="fas fa-phone fa-3x mb-3 sr-contact-1"></i>
        <a href="https://www.ey.com">Click here for the company website</a>
      </div>
      <div class="col-lg-4 mr-auto text-center">
        <i class="fas fa-envelope fa-3x mb-3 sr-contact-2"></i>
        <p>
          <a href="https://www.ey.com">Click here for training opportunities</a>
        </p>
      </div>
    </div>
  </div>
</section>
