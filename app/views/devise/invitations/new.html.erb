<div class="container container--thin" id="kontainer">
	<h2><%= t "devise.invitations.new.header" %></h2>

	<%= simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post} do |f| %>
	 <%= devise_error_messages! %>

	 <div class="form-group">
	  	<%= f.input :first_name %>
	 </div>

	  <div class="form-group">
	  	<%= f.input :last_name %>
	  </div>

	  <div class="form-group">
	  	<%= f.input :email %>
	  </div>

	  <div class="form-group">
	  	<%= f.label :manager_id %>
	  	<%= f.collection_select :manager_id, User.managers, :id, :full_name, { prompt: true }, { class: 'js-selectize' } %>
	  </div>

	  <div class="form-group">
	  	<%= f.label :counsellor_id %>
	  	<%= f.collection_select :counsellor_id, User.all, :id, :full_name, { prompt: true }, { class: 'js-selectize' } %>
	  </div>

	  <div class="form-group">
	  	<%= f.label :role %>
			<%= f.select :role, User.roles.keys.map { |role| [role.humanize, role] }, { prompt: true }, class: 'js-selectize' %>
	  </div>

	  <div class="form-group">
      <div class="pretty p-icon p-round p-jelly">
        <%= f.check_box :admin %>
        <div class="state p-warning">
          <i class="icon fas fa-check"></i>
           <%= f.label :admin %>
        </div>
      </div>

      <div class="pretty p-icon p-round p-jelly">
        <%= f.check_box :is_manager %>
        <div class="state p-warning">
          <i class="icon fas fa-check"></i>
          <%= f.label :is_manager, 'Manager' %>
        </div>
      </div>
    </div>

	  <div class="form-group">
	  	<%= f.label :join_date %>
  		<%= f.text_field :join_date, class: 'js-datepicker', placeholder: 'DD-MM-YYYY' %>
		</div>

	  <div class="form-group">
	  	<%= f.button :submit, t("devise.invitations.new.submit_button"), class: 'button' %>
	  </div>
	<% end %>
</div>
