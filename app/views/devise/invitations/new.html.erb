<div class="container container--thin" id="kontainer">
	<h2><%= t "devise.invitations.new.header" %></h2>

	<%= simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post} do |f| %>
	 <%= devise_error_messages! %>

	 <div class="form-group">
	  	<%= f.input :first_name %>
	 </div>

	  <div class="form-group">
	  	<%= f.input :last_name %>
	  </div>

	  <div class="form-group">
	  	<%= f.input :email %>
	  </div>

	  <div class="form-group">
	  	<%= f.label :role %>
	  	<div class="select-style">
			<%= f.select :role, User.roles.keys.map { |role| [role.humanize, role] } %>
	  	</div>
	  </div>

	  <div class="form-group">
	  	<%= f.label :admin %>
    	<%= f.check_box :admin %>
  	  </div>

  	  <div class="form-group">
  	  	<%= f.label :join_date %>
  	  	<div class="cal-style">
	  		<%= f.date_field :join_date %>
  		</div>
	  </div>

	  <div class="form-group">
	  	<%= f.button :submit, t("devise.invitations.new.submit_button"), class: 'button' %>
	  </div>
	<% end %>
</div>
