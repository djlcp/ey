<div class="container">
  <h2>HR Panel</h2>
  <h4>User list</h4>            
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Email</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to "View User", hr_user_path(user), class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <h4>Add new Users</h4>
  <%= link_to 'new user', new_user_invitation_path, class: 'btn btn-primary' %>
</div>