<div class="container" id="kontainer">
  <h2 class="mb-3">HR Panel</h2>
  <%= link_to 'Add new user', new_user_invitation_path, class: 'button button--small mb-5' %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Email</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to "View User", hr_user_path(user), class: 'button button--small' %>
          <%= link_to "Delete", hr_user_path(user), class: 'button button--small button--danger', method: :delete, data: { confirm: "Are you sure you want to delete this user?" } %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
