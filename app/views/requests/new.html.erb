<%#= f.error_notification %>

<%= form_with model: @request, local: true do |f| %>

  <% if @request.errors.present? %>
    <%= @request.errors.full_messages.to_sentence %>
  <% end %>

  <div class="field form-group">
    <%= f.label :start %>
    <%= f.date_field :start %>
  </div>

  <div class="field form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control'%>
  </div>

  <div class="field form-group">
    <%= f.label :end %>
    <%= f.date_field :end %>
  </div>

  <div class="field form-group">
    <%#= f.input :leave_type, as: :radio_buttons,
      collection: ['Sick Leave', 'Annual Leave', 'Study Leave'] %>

    <%= f.label :leave_type %>
    <% Request.leave_types.keys.each do |leave_type| %>

      <%= f.radio_button :leave_type, value: leave_type %>
      <%= f.label :leave_type_id, leave_type.humanize %>

    <% end %>
  </div>

  <div class="field form-group">
    <%= f.button :submit %>
  </div>

<% end %>