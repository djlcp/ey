<div class="container" id="kontainer">

  <%= form_with model: @request, local: true do |f| %>

    <% if @request.errors.present? %>
      <%= @request.errors.full_messages.to_sentence %>
    <% end %>

    <div class="field form-group">
      <%= f.label :start %>
      <div class="cal-style">
        <%= f.date_field :start %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control'%>
    </div>

    <div class="field form-group">
      <%= f.label :end %>
      <div class="cal-style">
        <%= f.date_field :end %>
      </div>
    </div>

    <div class="field form-group">
      <%#= f.input :leave_type, as: :radio_buttons,
        collection: ['Sick Leave', 'Annual Leave', 'Study Leave'] %>
      <%= f.label :leave_type %>
      <div class="select-style">
        <%= f.select :leave_type, Request.leave_types.keys %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.button :submit %>
    </div>

  <% end %>
</div>
