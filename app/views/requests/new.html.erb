<div class="container" id="kontainer">
  <%#= f.error_notification %>

  <%= form_with model: @request, local: true do |f| %>

    <% if @request.errors.present? %>
      <%= @request.errors.full_messages.to_sentence %>
    <% end %>

    <div class="field form-group">
      <%= f.label :start %>
      <%= f.date_field :start %>
    </div>

    <div class="field form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control'%>
    </div>

    <div class="field form-group">
      <%= f.label :end %>
      <%= f.date_field :end %>
    </div>

    <div class="field form-group">
      <%#= f.input :leave_type, as: :radio_buttons,
        collection: ['Sick Leave', 'Annual Leave', 'Study Leave'] %>

      <%= f.label :leave_type %>

      <%= f.select :leave_type, Request.leave_types.keys %>
    </div>

    <div class="field form-group">
      <%= f.button :submit %>
    </div>

  <% end %>
</div>