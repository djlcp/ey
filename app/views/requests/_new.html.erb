<style type="text/css">
	
	.modal {
		position: absolute;
		top: 0;
		left: 0;
		bottom: 0;
		padding: 40px;
		background: red;
		z-index: 999;
	}

</style>

<div class="modal">
	
	<div>
		<%= form_with model: Request.new, url: requests_path(format: :js)  do |f| %>

			<%= f.label :description %>
			<%= f.text_field :description %>

			<%= f.label :start %>
			<%= f.date_field :start %>

			<%= f.label :end %>
			<%= f.date_field :end %>

			<%= f.label :time %>
			<%= f.time_field :time %>

			<%= f.submit %>

		<% end %>

<%= form_with model: @request, url: requests_path(format: :js) do |f| %>

  <% if @request.errors.present? %>
    <%= @request.errors.full_messages.to_sentence %>
  <% end %>

  <div class="field form-group">
    <%= f.label :start %>
    <%= f.date_field :start %>
  </div>

  <div class="field form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control'%>
  </div>

  <div class="field form-group">
    <%= f.label :end %>
    <%= f.date_field :end %>
  </div>

  <div class="field form-group">

    <%= f.label :leave_type %>
    <% Request.leave_types.keys.each do |leave_type| %>

      <%= f.radio_button :leave_type, value: leave_type %>
      <%= f.label :leave_type_id, leave_type.humanize %>

    <% end %>
  </div>

  <div class="field form-group">
    <%= f.button :submit %>
  </div>

<% end %>
	</div>
</div>