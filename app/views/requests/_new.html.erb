<style type="text/css">
	
	.modal {
		position: absolute;
		top: 0;
		left: 0;
		bottom: 0;
		padding: 40px;
		background: red;
		z-index: 999;
	}

</style>

<div class="modal">
	
	<div>
		<%= form_with model: Request.new, url: requests_path(format: :js)  do |f| %>

			<%= f.label :description %>
			<%= f.text_field :description %>

			<%= f.label :start %>
			<%= f.date_field :start %>

			<%= f.label :end %>
			<%= f.date_field :end %>

			<%= f.label :time %>
			<%= f.time_field :time %>

			<%= f.submit %>
		<% end %>
	</div>
</div>

	